{

  "compileOnSave": true,
  "compilerOptions": {
      "lib": ["es6"],
      "types": ["node"],
      "outDir": "./build/",
      "watch": true,
      "allowJs": true,
      "sourceMap": true,
    //   "noImplicitAny": true,
      "target": "es6",
      "module": "CommonJS",
      "alwaysStrict": false,
      "strict": false,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "charset": "utf8",
      "allowSyntheticDefaultImports": true,
    //   "noUnusedLocals": true,
    //   "noUnusedParameters": true,
      "incremental" : true
  },
  "include": [
      "app.ts",
      "backend/**/*.ts"
  ],
  "exclude": [
      "frontend",
      "tests",
      "dist",
      "node_modules",
      "**/*.spec.js",
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/*.test.ts"
  ]
} 